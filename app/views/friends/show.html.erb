<p style="color: green"><%= notice %></p>

<div class="container-fluid py-5">
  <h1 class="display-5 fw-bold"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="col-md-8 fs-4"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.instagram %></p>
  <div class="d-flex gap-2">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %>
    <%= link_to "Back to friends", friends_path, class: "btn btn-dark" %>
    <%= button_to "Destroy this friend", @friend, method: :delete, class: "btn btn-secondary" %>
  </div>
</div>
